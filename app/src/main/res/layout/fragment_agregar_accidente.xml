<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Accidente.AgregarAccidenteFragment">

    <ScrollView
        android:id="@+id/sv_accidente"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_placa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Número de placa" />

                    <EditText
                        android:id="@+id/et_agente"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="ID Agente" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_hora"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Hora"
                        android:focusable="false"
                        android:clickable="true"/>

                    <EditText
                        android:id="@+id/et_fecha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Fecha"
                        android:focusable="false"
                        android:clickable="true"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_titulo_accidente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Titulo" />

                    <EditText
                        android:id="@+id/et_descripcion_accidente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:hint="Descripcion"
                        android:inputType="textMultiLine"
                        android:maxLines="6"
                        android:minLines="4"
                        android:overScrollMode="always"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/btn_tomarFoto"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Tomar Foto" />

                        <Button
                            android:id="@+id/btn_subirFoto"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Subir Foto" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_imagenAccidente"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_nombreLugar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre del lugar" />

                    <fragment
                        android:id="@+id/fr_ubicacionAccidente"
                        android:name="com.example.grupo_05_tarea_16_ejercicio_01.adapter.MapMoveFragment"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_agregarAccidente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Añadir" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>