<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:text="N° de Placa:"/>

    <EditText
        android:id="@+id/et_actualizar_numPlaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de Placa"
        android:inputType="number"
        android:background="@drawable/rounded_edittext"
        android:layout_margin="2dp"
        android:padding="8dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:text="Marca:"/>

    <EditText
        android:id="@+id/et_actualizar_marca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nueva Marca"
        android:background="@drawable/rounded_edittext"
        android:layout_margin="2dp"
        android:inputType="text"
        android:padding="8dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:text="Modelo:"/>

    <EditText
        android:id="@+id/et_actualizar_modelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nuevo Modelo"
        android:background="@drawable/rounded_edittext"
        android:layout_margin="2dp"
        android:inputType="text"
        android:padding="8dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:text="Motor:"/>

    <EditText
        android:id="@+id/et_actualizar_motor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nuevo Motor"
        android:background="@drawable/rounded_edittext"
        android:layout_margin="2dp"
        android:inputType="text"
        android:padding="8dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:text="Fecha:"/>

    <EditText
        android:id="@+id/et_actualizar_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nueva Fecha"
        android:background="@drawable/rounded_edittext"
        android:layout_margin="2dp"
        android:clickable="true"
        android:focusable="false"
        android:padding="8dp"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:text="Propietario:"/>

    <Spinner
        android:id="@+id/sp_actualizar_propietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
</LinearLayout>
