<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_item">

    <EditText
        android:id="@+id/et_actualizar_numPlaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NÃºmero de Placa"
        android:inputType="number"
        android:background="@drawable/rounded_edittext"
        android:layout_margin="2dp"
        android:padding="8dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/et_actualizar_marca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nueva Marca"
        android:background="@drawable/rounded_edittext"
        android:layout_margin="2dp"
        android:inputType="text"
        android:padding="8dp"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/et_actualizar_modelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nuevo Modelo"
        android:background="@drawable/rounded_edittext"
        android:layout_margin="2dp"
        android:inputType="text"
        android:padding="8dp"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/et_actualizar_motor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nuevo Motor"
        android:background="@drawable/rounded_edittext"
        android:layout_margin="2dp"
        android:inputType="text"
        android:padding="8dp"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/et_actualizar_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nueva Fecha"
        android:background="@drawable/rounded_edittext"
        android:layout_margin="2dp"
        android:inputType="text"
        android:padding="8dp"
        android:textSize="18sp"/>
    <Spinner
        android:id="@+id/sp_actualizar_propietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
</LinearLayout>
