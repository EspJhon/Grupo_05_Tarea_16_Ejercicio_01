<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OficinaGob.ActualizarOficinaFragment"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:textColor="@color/black"
                android:text="Valor del Vehiculo:"/>

            <EditText
                android:id="@+id/et_valorVehiculoA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_margin="1dp"
                android:textSize="16sp"
                android:hint="Valor del vehículo"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:textColor="@color/black"
                android:text="Número de Poliza:"/>

            <EditText
                android:id="@+id/et_numPolizaA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_margin="2dp"
                android:textSize="16sp"
                android:hint="Número de Poliza"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:textColor="@color/black"
                android:text="Número de Placa:"/>

            <Spinner
                android:id="@+id/sp_numPlacaA_oficina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_ubicacionA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext"
                    android:layout_margin="2dp"
                    android:textSize="16sp"
                    android:hint="Ubicación" />

                <fragment
                    android:id="@+id/fr_ubicacionOficinaA"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="350dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_actualizarOficina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_button_black"
                android:text="Actualizar" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>